<%= render 'show_layout' do %>
  <div data-controller="shop-map" data-action="map-loaded@window->shop-map#createMap"
      data-shop-map-latitude-value=<%=@ramen_shop.latitude%>
      data-shop-map-longitude-value=<%=@ramen_shop.longitude%>
      data-shop-map-name-value=<%=@ramen_shop.name%>>
    <div id="shop-map" data-shop-map-target="map"></div>
  </div>
  <div class="route-map-link">
    <a target="_blank" class="normal-link"
      href="https://www.google.com/maps/dir/?api=1&destination=<%=@ramen_shop.latitude%>%2C<%=@ramen_shop.longitude%>"
      rel="noopener">店舗までの経路を調べる
      <i class="fa-solid fa-arrow-up-right-from-square"></i>
    </a>
  </div>
<% end %>
