<%= search_form_for @search, url: root_path  do |f| %>
  <%= f.search_field :name_cont, placeholder: "店名で検索" %>
  <%= f.submit %>
  <%= link_to "クリア", root_path %>
<% end %>
<div class="card shadow mt-3">
  <div class="card-header">
    <%= tag.span("一覧") %>
  </div>
  <div class="card-body mx-3">
    <%= render @ramen_shops %>
    <div class="d-flex justify-content-end mt-3">
      <%= paginate @ramen_shops %>
    </div>
  </div>
  <div class="fixed-bottom d-grid gap-2">
    <%= link_to '現在地からセツゾク！', search_path, class: "btn btn-warning" %>
  </div>
  <div class="d-grid gap-2">
  </div>
</div>
