<aside class="col-md-4">
  <section class="user_info">
    <h1 class="d-flex align-items-center">
      <%= skeleton_background_tag 'avatar' do %>
        <%= avatar_for(@user, :middle) %>
      <% end %>
      <%= @user.name %>
    </h1>
  </section>
  <section class="stats">
    <%= render 'shared/stats' %>
  </section>
  <% if current_user? @user %>
    <p><%= link_to 'ユーザー情報を編集する', edit_user_path(@user) %></p>
  <% end %>
  <% if logged_in? && current_user.admin? %>
    <p><%= link_to 'すべてのユーザーをみる', users_path %></p>
  <% end%>
</aside>
<div class="col-md-8">
  <% if @user.records.any? %>
    <div class="my-3 p-3 bg-body rounded shadow-sm">
    <h6 class="border-bottom pb-2 mb-0"><%= tag.span("レコード数 #{@user.records.count}") %></h6>
    <%= render @records, name: :ramen_shop %>
    <div class="d-flex justify-content-center mt-3">
      <%= paginate @records%>
    </div>
  </div>
  <% end %>
</div>
