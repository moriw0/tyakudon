<%= tag.div id: dom_id(line_status) do %>
  <div class="d-flex text-body-secondary pt-3">
    <%= link_to avatar_for(line_status.record.user, :small), line_status.record.user %>
    <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
      <div class="mb-1 d-flex w-100 justify-content-between">
        <span class="d-block text-gray-dark"><%= line_status.record.user.name %></span>
        <small><%= format_datetime line_status.created_at %></small>
      </div>
      <div class="d-flex justify-content-between align-items-end">
        <div>
          <p class="mb-1"><%= line_type_badge(line_status) %></p>
          <% unless line_status.seated? %>
            <p class="mb-1">待ち行列: <%= line_status.line_number %></p>
          <% end %>
          <% if line_status.comment.present? %>
            <p class="mb-1">ひとこと: <%= line_status.comment %></p>
          <% end %>
          <% if line_status.image.attached? %>
            <%= image_tag line_status.image.variant(:display) %>
          <% end %>
        </div>
        <div>
          <%= link_to '編集', edit_line_status_path(line_status), data: { turbo_stream: true } %>
        </div>
      </div>
    </div>
  </div>
<% end %>
