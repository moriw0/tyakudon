<%= render "modal", title: "登録" do %>
  <%= turbo_frame_tag @line_status do %>
    <%= bootstrap_form_with model: @line_status, url: record_line_statuses_path, data: { action: "turbo:submit-end->modal#close" } do |f| %>
      <%= render "form", f: f %>
      <%= f.submit class: "btn btn-sm btn-warning", data: { disable_with: '登録中...' } %>
    <% end%>
  <% end %>
<% end %>
